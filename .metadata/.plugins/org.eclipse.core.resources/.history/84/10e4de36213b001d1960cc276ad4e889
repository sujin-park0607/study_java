package edu.lion.car;
import java.util.*;

public class Array {

	public static void main(String[] args) {
		int[][] arr = new int[5][5];
		
		Scanner sc = new Scanner(System.in);
		System.out.print("행 인덱스 입력 >>");
		int row = sc.nextInt();
		
		System.out.print("열 인덱스 입력 >>");
		int column = sc.nextInt();
		
		arr[row][column] = 1;
		
		System.out.println(" 0 1 2 3 4");
		
		for(int i=0; i<5; i++) {
			System.out.print(i+" ");
			for(int j=0; j<5; j++) {
				if (arr[i][j] == 0) 
					System.out.print("0 ");
				else
					System.out.print("X ");
			}
			System.out.println();
		}
	}

}
