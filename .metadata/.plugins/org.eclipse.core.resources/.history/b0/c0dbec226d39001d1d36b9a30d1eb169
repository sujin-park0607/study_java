package java_hello;

import java.util.Scanner;

public class Star {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		Scanner sc = new Scanner(System.in);
		int num = sc.nextInt();
		
		for (int i=1; i <= num; i++) {
					
			for (int j=1; j <= 5-i; j++) {
				System.out.print(" ");
			}
			
			for (int k=1; k <= i; k++) {
				System.out.print("*");
			}
			
			System.out.println();
		}

	}

}
