//		rect.draw();
		
		//다형성(폴리몰피즘)
		//부모 = 자식
//		Shape shape2 = (Shape)new Rectangle();
//		shape2.draw();
//		shape2.draw2();
//		
//		
//		shape2 = new Trangle();
//		shape2.draw();
		
		//이거에 대한 이유는? 
//		Rectangle rec = new Shape();
		
		Shape[] shape = {new Triangle(10,10), new Rectangle(10,10)};
		
		double sumArea = 0;
		
		for(Shape s : shape) {
			sumArea += s.getArea();
		}
		System.out.println(sumArea);
	}

}
