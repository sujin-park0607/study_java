package java_0923;

class Shape{
	
	public void Shape() {
		
	}
	public void draw() {
		System.out.println("도형입니다. ");
	}
	
	public int getArea() {
		return 0;
	}
}

class Triangle extends Shape{
	
	private int base;
	private int height;
	
	public Triangle(int base, int height) {
		this.base = base;
		this.height = height;
	}
	
	@Override
	public int getArea() {
		return (base * height)/2;
	}
}

class Rectangle extends Shape{
	
	private int width;
	private int height;
	
	public Rectangle(int width, int height) {
		this.width = width;
		this.height = height;
	}
	
	@Override
	public int getArea() {
		return width * height;
	}
}

